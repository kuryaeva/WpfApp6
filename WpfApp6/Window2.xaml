                x:Name="dobav" Click="dobav_Click" 
                Grid.Column="1" 
                HorizontalAlignment="Left" 
                Foreground="White" 
                Margin="167,232,0,0"
                Grid.Row="1" 
                VerticalAlignment="Top" 
                Width="144"
                Height="29" 
                FontSize="15" 
                Background="Black"/>
        <TextBlock HorizontalAlignment="Left" 
             VerticalAlignment="Top" Margin="10,253,0,0" Grid.Row="1">
            <Hyperlink Foreground="Black" Name="End"
                       Click="End_Click">
