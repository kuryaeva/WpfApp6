                 Width="114"/>

        <Label Content="Имя" 
               HorizontalAlignment="Left" 
               Margin="193,37,0,0" 
               Grid.Row="1" 
               VerticalAlignment="Top" 
               FontWeight="Bold" 
               FontSize="15" 
               Grid.Column="1" />

        <TextBox Grid.Column="1" 
                 HorizontalAlignment="Left"
                 Height="23" 
                 Margin="242,70,0,0" 
                 Grid.Row="1" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Width="114"/>

        <Label Content="Дата рождения" 
               Grid.Column="1" 
               HorizontalAlignment="Left" 
               Margin="113,128,0,0" 
               Grid.Row="1" 
               VerticalAlignment="Top" 
               FontWeight="Bold" 
               FontSize="15" RenderTransformOrigin="-0.104,0.517"/>

        <DatePicker Grid.Column="1" 
                    HorizontalAlignment="Left"
                    Margin="242,132,0,0"
                    Grid.Row="1" 
                    VerticalAlignment="Top" 
                    Width="114"/>

